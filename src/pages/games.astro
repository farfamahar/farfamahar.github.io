---
import BaseHead from '../components/BaseHead.astro';
import Sidebar from '../components/Sidebar.astro';

// Game data remains unchanged
const games = [
{
    name: "The Light Of Our Yearning",
    videoId: "WqO-qXTadPI",
    images: ["/solastalgia-cover.webp"],
    description: "A short interactive visual poem about loss, longing, and dislocation. Through the medium of games, SOLASTALGIA explores the erosion of the sense of belonging to a particular place and a feeling of distress about its transformation.",
	link:"https://farfama.itch.io/solastalgia"
  },
  {
    name: "TO:RI",
    videoId: "qRs9hAGfc8c",
    images: ["/tori-image-0.webp"],
    description: "A quiet meditative first person narrative about the sacred essence of being. On a secluded islands lies an abandoned building holding the dreams and memories of a life once lived. To be released 2025.",
	link:"https://store.steampowered.com/app/3215280/TORI/"
  },
  {
    name: "Solastalgia",
    videoId: "WqO-qXTadPI",
    images: ["/solastalgia-cover.webp"],
    description: "A short interactive visual poem about loss, longing, and dislocation. Through the medium of games, SOLASTALGIA explores the erosion of the sense of belonging to a particular place and a feeling of distress about its transformation.",
	link:"https://farfama.itch.io/solastalgia"
  },
  {
    name: "ocean::ephemera",
    videoId: "8OAnukQ1pC8",
    images: ["/ocean-ephemera-screenshot.webp"],
    description: "A short interactive audio-visual experience in my ::ephemera series. Explore the kaleidoscopic::countours of ocean::ephemera.",
	link:"https://infinitetears.itch.io/oceanephemera"

  },
  {
    name: "i promise",
    videoId: "dQw4w9WgXcQ",
    images: ["/ipromise2.webp"],
    description: "The long road looms. Time based experimental liminal road that drastically alters visuals and sounds after 12am.",
	link:"https://infinitetears.itch.io/i-promise"
  }
];
---

<html lang="en">
	<head>
		<style>

			body {
				font-family: Arial, sans-serif;
				margin: 0;
				padding: 0;
				display: flex;
				font-size: 14px;
				line-height: 1.6;
				color: #333;
				min-height: 100vh;

			}
			.content {
				flex-grow: 1;
				padding: 60px;
				max-width: 1200px;
				margin: 0 auto;
				width: 100%;
				box-sizing: border-box;
			}
			.game-section {
				margin-bottom: 60px;
			}
			.game-title {
				font-size: 24px;
				margin-bottom: 20px;
				font-family: 'Geist-Regular', sans-serif;


			}
			
			.image-gallery {
				display: flex;
				overflow-x: auto;
				gap: 20px;
				margin-bottom: 20px;
				padding-bottom: 10px;
				-webkit-overflow-scrolling: touch;
			}
			.gallery-item {
				flex: 0 0 auto;
				width: 100%;
				max-width: 533px;
				height: 300px;
			}
			.gallery-video {
				width: 100%;
				height: 100%;
			}
			.gallery-image {
				width: 100%;
				height: 100%;
				object-fit: cover;
			}
			.game-description {
				max-width: 600px;
				font-family: 'Geist-Regular', sans-serif;

			}
			@media (max-width: 768px) {
				body {
					flex-direction: column;
				}
				.content {
					padding: 20px;
				}
				.game-title {
					font-size: 20px;
				}
				.gallery-item {
					height: 56.25vw; /* 16:9 aspect ratio */
					max-height: 300px;
				}
				.game-description {
					font-size: 14px;
				}
			}
		</style>
	</head>
	<body>
		<Sidebar />
		<div class="content">
			{games.map((game) => (
				<section class="game-section">
					<h2 class="game-title">{game.name}</h2>
					<div class="image-gallery">
						<div class="gallery-item">
								<img src={game.images[0]} alt={`Screenshot from ${game.name}`} class="gallery-image" />
							{/* )} */}
						</div>
					</div>
					<p class="game-description">{game.description}</p>
					{ game.link ? (
					<a href={game.link}>Link</a>
					) : (
						''
					)
					}
				</section>
			))}
		</div>
	</body>
</html>